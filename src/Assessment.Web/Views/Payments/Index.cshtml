@model List<Assessment.Domain.Payments.Payment>

@{
    ViewData["Title"] = "Payments";
}
@{
    var isAdmin = (bool)(ViewBag.IsAdmin ?? false);
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h2 class="mb-0">Payments</h2>
        <div class="text-muted">View and manage your payments</div>
    </div>

    <a class="btn btn-primary" href="/Payments/Create">
        + Create Payment
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        @if (Model == null || Model.Count == 0)
        {
            <div class="p-4 text-center">
                <div class="mb-2 fw-semibold">No payments yet</div>
                <div class="text-muted mb-3">Create your first payment to see it here.</div>
                <a class="btn btn-outline-primary" href="/Payments/Create">Create Payment</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Reference</th>
                            <th class="text-end">Amount</th>
                            <th>Currency</th>
                            <th>Status</th>
                            <th>Card</th>
                            <th>Expiry</th>
                            <th class="text-end">Attempts</th>
                            <th>Created Date</th>
                            <th class="text-end" style="width:180px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            var statusText = p.Status.ToString();

                            // simple badge mapping (adjust names if your enum differs)
                            var badgeClass = "bg-secondary";
                            if (statusText.Equals("Completed", StringComparison.OrdinalIgnoreCase) ||
                            statusText.Equals("Succeeded", StringComparison.OrdinalIgnoreCase))
                                badgeClass = "bg-success";
                            else if (statusText.Equals("Failed", StringComparison.OrdinalIgnoreCase))
                                badgeClass = "bg-danger";
                            else if (statusText.Equals("Processing", StringComparison.OrdinalIgnoreCase))
                                badgeClass = "bg-warning text-dark";
                            else if (statusText.Equals("Pending", StringComparison.OrdinalIgnoreCase))
                                badgeClass = "bg-info text-dark";

                            <tr>
                                <td class="fw-semibold">@p.Reference</td>

                                <td class="text-end">
                                    @p.Amount.ToString("0.00")
                                </td>

                                <td>
                                    <span class="text-muted">@p.Currency</span>
                                </td>

                                <td>
                                    <span class="badge @badgeClass">@statusText</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(p.CardLast4))
                                    {
                                        <span class="text-muted">**** **** **** @p.CardLast4</span>
                                    }
                                    else { <span class="text-muted">-</span> }
                                </td>
                                <td>
                                    @if (p.CardExpMonth.HasValue && p.CardExpYear.HasValue)
                                    {
                                        <span class="text-muted">@p.CardExpMonth.Value.ToString("00")/@(p.CardExpYear.Value % 100)</span>
                                    }
                                    else { <span class="text-muted">-</span> }
                                </td>

                                <td class="text-end">
                                    @p.AttemptCount
                                </td>

                                <td>
                                    <span class="text-muted">
                                        @p.CreationTimeUtc.ToString("yyyy-MM-dd HH:mm:ss")
                                    </span>
                                </td>
                                <td class="text-end">
                                    @if (isAdmin && statusText.Equals("Failed", StringComparison.OrdinalIgnoreCase) && p.AttemptCount < 3)
                                    {
                                        <form method="post" action="/Payments/Retry/@p.Id" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-warning"
                                                    onclick="return confirm('Re-trigger this failed payment?');">
                                                Retry
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
@section Scripts {
    <script>
        (function () {
            if (!window.signalR) return;

            async function refreshPayments() {
                try {
                    const res = await fetch("/api/payments", { headers: { "Accept": "application/json" }});
                    if (!res.ok) return;
                    const list = await res.json();

                    // simplest: reload page (fast & safe)
                    // location.reload();

                    // better: update table (if you want, I can give full DOM update code)
                    location.reload();
                } catch { }
            }

            const conn = new signalR.HubConnectionBuilder()
                .withUrl("/hubs/payments")
                .withAutomaticReconnect()
                .build();

            conn.on("paymentUpdated", function (paymentId) {
                refreshPayments();
            });

            conn.start().catch(console.error);
        })();
    </script>
}
