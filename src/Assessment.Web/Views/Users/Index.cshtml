@model List<Assessment.Application.Dtos.Auth.UserListItemDto>

@{
    ViewData["Title"] = "Users";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h2 class="mb-0">Users</h2>
        <div class="text-muted">Manage application users and roles</div>
    </div>
    <a class="btn btn-primary" href="/Users/Create">+ Create User</a>
    </div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        @if (Model == null || Model.Count == 0)
        {
            <div class="p-4 text-center text-muted">No users found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Email</th>
                            <th>User Name</th>
                            <th>Roles</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@u.Email</td>
                                <td>@u.UserName</td>
                                <td>
                                    @if (u.Roles?.Count > 0)
                                    {
                                        <span>@string.Join(", ", u.Roles)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">(none)</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

